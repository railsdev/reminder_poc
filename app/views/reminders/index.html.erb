<h1>Listing reminders</h1>

<table>
  <thead>
    <tr>
      <th>User |</th>
      <th>Name |</th>
      <th>Fq type |</th>
      <th>Fq interval |</th>
      <th>Fq monthly interval |</th>
      <th>Fq time |</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.user_id %></td>
        <td><%= reminder.name %></td>
        <td><%= reminder.fq_type %></td>
        <td><%= reminder.fq_interval %></td>
        <td><%= reminder.fq_monthly_interval %></td>
        <td><%= reminder.fq_time %></td>
        <td><%= link_to 'Show', reminder %></td>
        <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
        <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

